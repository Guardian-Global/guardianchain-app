  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "GuardianChain Home Dashboard"
    },
    {
      "src": "/screenshots/mobile-vault.png", 
      "sizes": "375x812",
